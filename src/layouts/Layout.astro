---
import { site } from "../constants";
import "../css/global.css";
export interface Props {
	title: string;
	description?: string;
	lang?: string;
	/** open-graph image */
	ogImage?: string;
}

const { lang = "en", title, description, ogImage } = Astro.props as Props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="og:title" content={title} />
		<meta name="twitter:title" content={title} />
		{description && (
			<meta name="description" content={description} />
			<meta name="og:description" content={description} />
		)}
		<meta name="author" content={site.author} />
		<link
			rel="alternate"
			type="application/rss+xml"
			title="andri.dk - latest posts"
			href="/rss.xml"
		/>

		<link rel="pingback" href="https://webmention.io/andri.dk/xmlrpc" />
		<link
			rel="webmention"
			href="https://webmention.io/andri.dk/webmention"
		/>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="shortcut icon" href="/img/coffee-icon.png" />
		{ogImage && (
		<meta property="og:image" content={`${ogImage}`} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:image" content={`${ogImage}`} />

		)}
		<script is:inline defer src="https://umami.andri.dk/script.js" data-website-id="34735181-d04a-41ce-9a47-1a4577472bf3"></script>

		<title>{`andri.dk | ${title}`}</title>
	</head>

	<body class="bg-gray-200">
		<slot />
	</body>
</html>
