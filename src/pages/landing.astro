---
import { Icon } from "astro-icon/components";
import Layout from "../components/Layout.astro";

const resumeData = {
	name: "John Doe",
	title: "Full Stack Developer",
	location: "San Francisco, CA",
	email: "john@example.com",
	github: "johndoe",
	linkedin: "johndoe",
	skills: ["JavaScript", "React", "Node.js", "Python", "SQL"],
};
---

<Layout
	title="Andri Ã“skarsson"
	description="I make websites, create apps, manage infrastructure, develop products and more."
	coverImage="./static/img/wave.svg"
>
	<div
		class="flex flex-col h-screen font-mono overflow-hidden bg-gradient-to-br from-blue-900 via-purple-900 to-red-900 text-cyan-300"
	>
		<div class="absolute inset-0 overflow-hidden pointer-events-none">
			{

				[...Array(20)].map((_, i) => {
				    const icons = ["lucide:laptop", "lucide:server", "lucide:cloud", "lucide:network", "lucide:pizza", "lucide:database", "lucide:sparkles", "lucide:shield-check" ]
					const iconName = icons[Math.floor(Math.random() * icons.length)]
					return (
						<Icon
						    name={iconName}
							class="absolute opacity-10 animate-float hover:opacity-30"
							style={{
								width: `${Math.random() * 100 + 50}px`,
								height: `${Math.random() * 100 + 50}px`,
								left: `${Math.random() * 100}%`,
								top: `${Math.random() * 100}%`,
								animationDuration: `${Math.random() * 10 + 5}s`,
								animationDelay: `${Math.random() * 5}s`,
								// backgroundColor: [
								// 	"#ff6b6b",
								// 	"#4ecdc4",
								// 	"#45b7d1",
								// ][Math.floor(Math.random() * 3)],
							}}
						/>
					);
				})
			}
		</div>
		<header class="relative z-20 p-4 flex justify-between items-center">
			<nav>
				<ul class="flex space-x-y">
					<li>
						<a
							href="#about"
							class="hover:text-yello-300 transition-colors"
							>About</a
						>
					</li>
				</ul>
			</nav>
		</header>
		<main
			class="relative z-20 flex-grow flex flex-col justify-center items-center p-4"
		>
			<div class="text-center space-y-4">
				<h1 class="text-4xl font-bold text-yellow-300">
					{resumeData.name}
				</h1>
				<p class="text-xl text-pink-300">{resumeData.title}</p>
				<p class="text-green-300">{resumeData.location}</p>
			</div>
			<div id="skills" class="mt-8 text-center">
				<h2 class="text-2xl font-semibold mb-2 text-yellow-300">
					Skills
				</h2>
				<ul class="flex flex-wrap justify-center gap-2">
					{
						resumeData.skills.map((skill, index) => (
							<li class="bg-cyan-700 px-3 py-1 rounded-full text-sm hover:bg-cyan-600 transition-colors">
								{skill}
							</li>
						))
					}
				</ul>
			</div>
		</main>

		<footer
			id="contact"
			class="relative z-20 p-4 flex justify-center space-x-4 text-4xl"
		>
			<a
				href={`mailto:${resumeData.email}`}
				class="hover:text-yellow-300 transition-colors"
			>
				<Icon name="lucide:mail" />
				<span class="sr-only">Email</span>
			</a>
			<a
				href={`https://github.com/${resumeData.github}`}
				target="_blank"
				rel="noopener noreferrer"
				class="hover:text-yellow-300 transition-colors"
			>
				<Icon name="lucide:github" />
				<span class="sr-only">GitHub</span>
			</a>
			<a
				href={`https://linkedin.com/in/${resumeData.linkedin}`}
				target="_blank"
				rel="noopener noreferrer"
				class="hover:text-yellow-300 transition-colors"
			>
				<Icon name="lucide:linkedin" />
				<span class="sr-only">LinkedIn</span>
			</a>
		</footer>
	</div>
</Layout>
