---
import Icon from 'astro-icon'
interface Props {
	categories: any;
	focus?: string[];
}

const { categories, focus = [] } = Astro.props as Props;
focus.map(f => f.toLowerCase());
---

<style>
	.skill-preview {
		h2: color
	}
</style>

<div class="flex flex-row flex-wrap justify-between">
	{categories.map((c) => (
	<div {c.name} class="w-full sm:w-1/2 lg:w-1/3 xl:w-1/4 flex flex-col p-6 md:p-0 mb-4 lg:mb-0">
		<h2 class="font-light uppercase text-base mb-4" style={`color: ${c.color}`}>
			{c.name}
		</h2>
		<div>
			{c.keywords &&
			c.keywords.map((s) => (
			<span class="andri-tag" style={`background-color: ${c.color}`}>
				{s.name}
				{focus.includes(s.name) ? (
				<Icon name="fa:heart" class="ml-2 inline-icon text-red-700" />
				) : null}
			</span>
			))}
		</div>
	</div>
	))}
</div>
