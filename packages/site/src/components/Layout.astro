---
import { SocialCard } from "social-cards";
import "../../css/global.css";
export interface Props {
	title: string;
	subtitle?: string;
	description?: string;
	coverImage?: string;
}

const { title, description, coverImage } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<meta name="og:title" content={title} />
	{description ?
	<meta name="description" content={description} /> : null}
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
	<SocialCard card="popup-card" props={{title, subtitle:description, authorImage:"./public/img/coffee-art.jpg",
		backgroundImage: coverImage || "./public/img/hvitserkur.jpg" }} />

</head>

<body>
	<slot />
</body>

<script data-goatcounter="https://andrioid.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>

</html>
