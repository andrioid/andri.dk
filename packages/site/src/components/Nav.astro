---
import andratar from "../../static/img/coffee-art.jpg";
import NavItem from "./NavItem.astro";
---

<nav class="flex items-center justify-between flex-wrap bg-blue-700 p-6">
  <a href="/" class="">
    <div class="flex items-center flex-shrink-0 text-white mr-6">
      <img
        alt="avatar"
        src={andratar}
        class="rounded-full shadow-2xl w-8 h-8 mr-4 inline-block rounded-full"
      />
      <span class="font-semibold text-xl tracking-tight inline-block">
        Andri
      </span>
    </div>
  </a>

  <div class="block flex-grow text-right">
    <NavItem href="/">Home</NavItem>
    <NavItem href="/blog/">Blog</NavItem>
    <NavItem href="/now/">Now</NavItem>
  </div>
</nav>
