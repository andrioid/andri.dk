---
import { Icon } from "astro-icon"
export interface Props {
  title: string;
  description: string;
  date: string;
  link: string;
  tags: string[];
  draft: boolean;
}

const { title, description, date, tags, draft } = Astro.props as Props;
let link = Astro.props.link;

if (link[link.length - 1] !== "/") {
  link += "/"; // Enforce trailing slash
}

---    
    <a
      class="flex pt-2 sm:pt-4 sm:pr-4 lg:pr-6 w-full sm:w-1/2 xl:w-1/3"
      href={link}
    >
      <div class="shadow-lg bg-white hover:shadow-2xl text-gray-900">
        <div class="flex flex-col px-6 pb-4 justify-between h-full">
          <div class="mt-4 text-sm text-gray-600 flex justify-start items-center">
            <Icon name="fa:calendar" class="inline w-3" />
            <span class="ml-2">
              {new Date(date).toLocaleDateString(undefined, {
                year: "numeric",
                month: "short",
                day: "numeric",
              })}
            </span>
          </div>

          <div class="flex mt-1 font-bold text-lg lg:text-xl mb-2">
            {title}
          </div>
          <!-- <div>
            <p>Lorem Ipsum stuff Lorem Ipsum stuffLorem Ipsum stuff Lorem Ipsum stuff Lorem Ipsum stuff</p>
          </div> -->
          {tags && tags.length > 0 ? (
            <div class="py-4">
              {tags.slice(0, 3).map((t) => (
                <span class="andri-tag">
                  {t}
                </span>
              ))}
              {draft ? (
                <span class="andri-tag text-white bg-red-400">Draft</span>
              ) : null}
            </div>
          ) : null}
        </div>

        <div class="px-6 py-4"></div>
      </div>
    </a>
